<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".BudgetFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:paddingLeft="15dp"
                    android:orientation="vertical">
                <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:text="@string/budget_title_label"/>
                <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:hint="@string/budget_title_hint" android:id="@+id/budget_title"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Max amount"
                        android:paddingTop="10dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/budget_amount_hint"
                        android:id="@+id/budget_amount"
                        android:paddingTop="15dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="How much did you spend?"
                        android:paddingTop="15dp" />
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter amount spent"
                        android:id="@+id/amount_spent"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"/>
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset current amount"
                        android:id="@+id/reset_button" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>